{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // ✅ Important for Node.js
    "moduleResolution": "node", // ✅ This fixes the error
    "esModuleInterop": true, // ✅ Required for import dotenv from "dotenv"
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  }
}
